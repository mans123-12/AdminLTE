
@{
    ViewBag.Title = "DataTable";
}

@section header{

    Information
}
@section table{
    Employee
}
@section script{
    <script src="~/AppJS/empDb.js"></script>
    <script src="~/frontend/plugins/datatables/jquery.dataTables.min.js"></script>
}
@section css{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.min.css" />
}
@section Customer{
    href="/Customer/CustomerDataTable"
}

@section Product{
    href="/Product/Registeration"
}


<div class="row" style="justify-content:center">





    <div class="col-md-6">
        <div class="card card-default">
            <div class="card-header">
                <h2 class="card-title"> Name</h2>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <div class="input-group">
                        <input type="text" class="form-control" id="empName" placeholder="Enter product">
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="col-md-6">
        <div class="card card-default">
            <div class="card-header">
                <h2 class="card-title">Email</h2>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <input type="email" class="form-control" id="empEmail" placeholder="Enter email" required>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card card-default">
            <div class="card-header">
                <h2 class="card-title">Address</h2>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <input type="text" class="form-control" id="empAddress" placeholder="Enter Address" required>
                </div>
            </div>
        </div>
    </div>
   
    <div class="col-md-6">
        <div class="card card-default">
            <div class="card-header">
                <h2 class="card-title">Mobile No</h2>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <input type="text" class="form-control" id="empNumber" placeholder="Enter Mobile No" required>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-2 text-center">
        <div class="row">
            <div class="glyphicon-upload post ">
                <button type="button" class="btn btn-primary col " id="empId" onclick="Update()">
                    <i class="fas fa-upload"></i>
                    <span>Save</span>
                </button>
            </div>
        </div>
    </div>
</div>








<div class="row">
    <div class="col-12">
        <div id="tabledata_wrapper" class="dataTables_wrapper dt-bootstrap4">
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-hover table-bordered" id="tabledata">
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>




<div class="modal fade" id="deletemodal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <input id="cusId" style="visibility:hidden;" />
                <h3 class="text-center">Do you want to delete</h3>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" onclick="Delete()" data-dismiss="modal">Yes</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

